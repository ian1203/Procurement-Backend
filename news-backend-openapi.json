{
  "openapi": "3.0.1",
  "info": {
    "title": "Procurement News Backend",
    "version": "0.2.0",
    "description": "Backend service that calls NewsAPI.org and returns normalized, relevance-scored news documents for supply-chain risk monitoring."
  },
  "servers": [
    {
      "url": "https://procurement-backend-2q98.onrender.com",
      "description": "Render deployment"
    }
  ],
  "paths": {
    "/news/search": {
      "post": {
        "summary": "News Search",
        "operationId": "news_search_news_search_post",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewsQuery"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "ok"
                    },
                    "effective_days_back": {
                      "type": "integer",
                      "description": "Actual number of days used in the query (clamped to NewsAPIâ€™s 30-day limit).",
                      "example": 30
                    },
                    "total_results_raw": {
                      "type": "integer",
                      "description": "NewsAPI's totalResults value before relevance filtering.",
                      "example": 128
                    },
                    "documents": {
                      "type": "array",
                      "description": "Normalized news articles with relevance scores.",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": { "type": "string" },
                          "title": { "type": "string" },
                          "content": { "type": "string" },
                          "url": { "type": "string" },
                          "source": { "type": "string" },
                          "publishedAt": {
                            "type": "string",
                            "format": "date-time"
                          },
                          "material_risk_hint": {
                            "type": "string",
                            "description": "The final NewsAPI query string used for this search."
                          },
                          "relevance_score": {
                            "type": "integer",
                            "description": "Heuristic relevance score; higher means more likely to be a true supply-chain risk article.",
                            "example": 6
                          },
                          "high_relevance": {
                            "type": "boolean",
                            "description": "True if the article passes the current high-relevance threshold on the backend.",
                            "example": true
                          }
                        },
                        "required": [
                          "id",
                          "title",
                          "url",
                          "source",
                          "publishedAt",
                          "material_risk_hint",
                          "relevance_score",
                          "high_relevance"
                        ]
                      }
                    }
                  },
                  "required": [
                    "status",
                    "effective_days_back",
                    "total_results_raw",
                    "documents"
                  ]
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "NewsQuery": {
        "title": "NewsQuery",
        "type": "object",
        "required": ["query"],
        "properties": {
          "query": {
            "type": "string",
            "title": "Query",
            "description": "Main risk phrase, e.g. 'concrete disruption' or 'oil price'."
          },
          "region": {
            "title": "Region",
            "description": "City / region / country to focus on, e.g. 'Montreal' or 'North America'.",
            "type": "string",
            "nullable": true
          },
          "materials": {
            "title": "Materials",
            "description": "List of material keywords, e.g. ['concrete','cement','steel'].",
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          },
          "days_back": {
            "title": "Days Back",
            "description": "How many days back to search from today (will be clamped to 30 on the backend).",
            "type": "integer",
            "default": 5
          }
        }
      },
      "HTTPValidationError": {
        "title": "HTTPValidationError",
        "type": "object",
        "properties": {
          "detail": {
            "title": "Detail",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            }
          }
        }
      },
      "ValidationError": {
        "title": "ValidationError",
        "type": "object",
        "required": ["loc", "msg", "type"],
        "properties": {
          "loc": {
            "title": "Location",
            "type": "array",
            "items": {
              "oneOf": [
                { "type": "string" },
                { "type": "integer" }
              ]
            }
          },
          "msg": {
            "title": "Message",
            "type": "string"
          },
          "type": {
            "title": "Error Type",
            "type": "string"
          }
        }
      }
    }
  }
}
